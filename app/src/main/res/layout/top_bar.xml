<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:alpha="60"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_rootlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height_no_line">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/top_bar_horizontal_margin"
            android:paddingRight="@dimen/top_bar_horizontal_margin">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_left_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_left"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/top_bar_horizontal_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_left_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_centent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:paddingRight="@dimen/top_bar_horizontal_margin">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_right"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/top_bar_horizontal_margin"
            android:visibility="gone"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_right_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_top_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />
</LinearLayout>