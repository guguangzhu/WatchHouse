<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/link_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_logo"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:text="唐伯虎点蚊香"
            android:layout_below="@+id/iv_logo"
            android:textColor="@color/white"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username" />

        <ImageView
            android:id="@+id/iv_sign_in"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_width="45dp"
            android:layout_height="18dp" />
        <View
            android:id="@+id/line1"
            android:layout_below="@+id/tv_username"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="1px" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="我的资料"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_my_info" />
            <View
                android:layout_width="1px"
                android:background="@color/white"
                android:layout_height="match_parent" />
            <TextView
                android:text="我的关注"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_my_concern" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_coupon"
                android:text="优惠券"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_subtitle_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_coupon_amount"
                android:text="3张可用"
                android:layout_below="@+id/tv_coupon"
                android:layout_alignLeft="@+id/tv_coupon"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/link_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tv_coupon"
                 />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_red_packet"
                android:text="红    包"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_subtitle_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_remain"
                android:text="余额500元"
                android:layout_below="@+id/tv_red_packet"
                android:layout_alignLeft="@+id/tv_red_packet"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/link_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tv_red_packet"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_gift"
                android:text="礼    品"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_subtitle_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_not_get"
                android:text="3张可用"
                android:layout_below="@+id/tv_gift"
                android:layout_alignLeft="@+id/tv_gift"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/link_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tv_gift"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_point"
                android:text="积    分"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_subtitle_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_remain_point"
                android:text="余额3220分"
                android:layout_below="@+id/tv_point"
                android:layout_alignLeft="@+id/tv_point"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@color/link_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tv_point"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/common_horizontal_padding"
        android:paddingLeft="@dimen/common_horizontal_padding"
        android:gravity="center_vertical"
        android:layout_height="49dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的消息"/>
        <ImageView
            android:src="@mipmap/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/common_horizontal_padding"
        android:paddingLeft="@dimen/common_horizontal_padding"
        android:gravity="center_vertical"
        android:layout_height="49dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:layout_weight="1"/>

        <ImageView
            android:src="@mipmap/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/common_horizontal_padding"
        android:paddingLeft="@dimen/common_horizontal_padding"
        android:gravity="center_vertical"
        android:layout_height="49dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:layout_weight="1"/>

        <ImageView
            android:src="@mipmap/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>