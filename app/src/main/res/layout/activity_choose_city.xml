<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toda.yjkf.ChooseCityActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="@dimen/common_horizontal_padding"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_search"
                    android:background="@drawable/bg_oval_gray"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_nomal"
                    android:hint="请输入需要搜索的城市名称"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="当前所在城市"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_city"
                    android:text=""
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/main_color"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.toda.yjkf.view.NoScrollListView
                android:id="@+id/lv_cites"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:divider="@color/line_color"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"  />
        </LinearLayout>
</ScrollView>
