<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/common_horizontal_padding"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/bg_login_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_logo" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="小区中心位置，看房十分方便"
            android:textColor="@color/text_title_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_name" />
        <TextView
            android:text="100㎡ 三室一厅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_title_color"
            android:ellipsize="end"
            android:id="@+id/tv_size" />
        <TextView
            android:text="西湖区 新村  10000/㎡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_small"
            android:ellipsize="end"
            android:id="@+id/tv_address_price" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_nice_type" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_nice_type" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_nice_type" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="300万"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_money" />
</LinearLayout>